{# templates/finance/cashflow/categories/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Категории ДДС{% endblock %}
{% block body %}
    <h2>Категории движения денежных средств</h2>
    <a href="{{ path('cashflow_category_new') }}" class="btn btn-success mb-3">Добавить категорию</a>
    <table class="table table-striped">
        <thead>
        <tr><th>Название</th><th>Родительская категория</th><th>Действия</th></tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.parent ? category.parent.name : '-' }}</td>
                <td>
                    <a href="{{ path('cashflow_category_edit', {id: category.id}) }}" class="btn btn-sm btn-outline-secondary">Изменить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
